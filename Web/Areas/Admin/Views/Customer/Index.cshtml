@model IEnumerable<Data.Entities.Shop.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/datatables/css/dataTables.bootstrap4.css" />

<h1>List of Customers</h1>
<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
@*<p>@Html.Raw(ViewBag.columns)</p>*@

<div class="container table-responsive">
    <table class="table table-striped table-bordered dt-resposive nowrap AG-data-table"
           style="width: 100%;"
           id="Customers"
           data-AG-columns='@Html.Raw(ViewBag.columns)'
           data-AG-message='@Html.Raw(ViewBag.Message)'
           data-AG-load-url='@Url.Action("LoadDataTable","Customer")'
           data-AG-edit='@Url.Action("Edit","Customer")'
           data-AG-delete='@Url.Action("Delete","Customer")'>
        <thead>
            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0 text-center">
             @*this code will replace writing th manually*@
                @*  @foreach (var item in ViewBag.stringColumns)
                {
                    <th>@item</th>
                }*@

              @*added mixed class name for targeting specific column with class name*@
                
                <th>ID</th>
                <th>Name</th>
                <th class ="multipleRows">Address</th>
                <th class="multipleRows">City</th>
                <th class="multipleRows">PhoneNumber</th>
                @*<th>SecondPhoneNumber</th>*@
                <th>OrdersRequested</th>
                <th>CashCollected</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="fw-bold text-center">
        </tbody>
        <tfoot>
            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0 text-center">
                <th>ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>PhoneNumber</th>
                @*<th>SecondPhoneNumber</th>*@
                <th>OrdersRequested</th>
                <th>CashCollected</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </tfoot>
    </table>
</div>

